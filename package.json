    "mathjax": "2.7.7",
    "portfinder": "^1.0.25",
    "preact": "^10.1.1",
    "serve-handler": "^6.1.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.20",
    "@types/serve-handler": "^6.1.0",
    "execa": "^3.4.0",
    "file-type": "^12.4.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "read-chunk": "^3.2.0",
    "shx": "^0.3.2",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "types": "dist/cli.d.ts",
  "main": "dist/cli.js",
  "husky": {
    "hooks": {
